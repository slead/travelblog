/ Page Header
%link{:href => "//cdn-images.mailchimp.com/embedcode/classic-061523.css", :rel => "stylesheet", :type => "text/css"}/
%header.masthead.d-none.d-md-block{:style => "background-image: url('https://farm6.staticflickr.com/5177/5513056929_6fa0c4f7fe_b.jpg')", :role => "img", "aria-label" => "Travel blog header image"}
  .container
    .row
      .col-lg-8.col-md-10.mx-auto
        .site-heading
          %h1 Steve and Glo's travel blog
          %span.subheading Travelling the world since 2001

.container.top-50
  .row
    .col-md-10.mx-auto
      %p Subscribe below, and we'll let you know when there are new posts. We won't use your email for anything else.

      #mc_embed_signup
        %form#mc-embedded-subscribe-form.validate{:action => "https://sector7geo.us11.list-manage.com/subscribe/post?u=f5f4e9f9533c4cadd2bf32358&id=adc0e0ab06&f_id=0055d1e3f0", :method => "post", :name => "mc-embedded-subscribe-form", :target => "_blank"}
          #mc_embed_signup_scroll
            %h2 Subscribe
            .indicates-required
              %span.asterisk *
              indicates required
            .mc-field-group
              %label{:for => "mce-EMAIL"}
                Email Address
                %span.asterisk *
              %input#mce-EMAIL.required.email{:name => "EMAIL", :required => "", :type => "email", :value => ""}/
            #mce-responses.clear.foot
              .response#mce-error-response{:style => "display: none;"}
              .response#mce-success-response{:style => "display: none;"}
            %div{"aria-hidden" => "true", :style => "position: absolute; left: -5000px;"}
              / real people should not fill this in and expect good things - do not remove this or risk form bot signups
              %input{:name => "b_f5f4e9f9533c4cadd2bf32358_adc0e0ab06", :tabindex => "-1", :type => "text", :value => ""}/
            .optionalParent
              .clear.foot
                %input#mc-embedded-subscribe.button{:name => "subscribe", :type => "submit", :value => "Subscribe"}/
                %p{:style => "margin: 0px auto;"}
                  %a{:href => "http://eepurl.com/jbUSZM", :title => "Mailchimp - email marketing made easy and fun"}
                    %span{:style => "display: inline-block; background-color: transparent; border-radius: 4px;"}
                      %img.refferal_badge{:alt => "Intuit Mailchimp", :src => "https://digitalasset.intuit.com/render/content/dam/intuit/mc-fe/en_us/images/intuit-mc-rewards-text-dark.svg", :style => "width: 220px; height: 40px; display: flex; padding: 2px 0px; justify-content: center; align-items: center;"}/

%script{:src => "//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js", :type => "text/javascript"}
:javascript
  (function($) {
    window.fnames = new Array();
    window.ftypes = new Array();
    fnames[0]='EMAIL';ftypes[0]='email';
    fnames[1]='FNAME';ftypes[1]='text';
    fnames[2]='LNAME';ftypes[2]='text';
    fnames[3]='ADDRESS';ftypes[3]='address';
    fnames[4]='PHONE';ftypes[4]='phone';
    fnames[5]='BIRTHDAY';ftypes[5]='birthday';
    fnames[6]='COMPANY';ftypes[6]='text';
  }(jQuery));
  var $mcj = jQuery.noConflict(true);
