/ Page Header
.container-fluid.top-50
	-if @post.photos.count > 0
		%header.masthead.d-none.d-md-block{:style => "background-image: url(#{@post.photos[0].large})"}
			.container
				.row
					.col-lg-8.col-md-10.mx-auto
						.post-heading
							%h1= @post.title
							%span.meta=@meta
							- if @post.status == 'draft'
								%span.meta.draft= "(draft)"
	- else
		%header.empty
			.container
				.row
					.col-lg-8.col-md-10.mx-auto
						.post-heading
							%h1= @post.title
							%span.meta=@meta
							- if @post.status == 'draft'
								%span.meta.draft= "(draft)"

	%article
		.container
			- if user_signed_in?
				.row
					= link_to 'Edit', edit_post_path(@post)
			.row
				.col-lg-8.col-md-10.mx-auto
					= sanitize @post.content
			- if @post.photos.count > 0
				- @post.photos.drop(1).each do |photo|
					.row
						.col-md-12
							%figure
								%img.image{:alt => "#{photo.title}", :src => "#{photo.large}", :class => "lightbox-frame mx-auto d-block"}
								-if not photo.title.include? "jpg"
									%figcaption= "#{photo.title}"
				.row
					.col-md-12
						%figure
							%img.image{:alt => "#{@post.photos.first.title}", :src => "#{@post.photos.first.large}", :class => "lightbox-frame mx-auto d-block"}
							-if not @post.photos.first.title.include? "jpg"
								%figcaption= "#{@post.photos.first.title}"

	-if @post.previous || @post.next
		.container.top-50
			.row.pagination
				.col-md-12
					#nav.pagination
						#ul.pagination
							-if @post.previous
								#li.page-item
									=link_to "<< #{@post.previous.title}", @post.previous, :class => "page-link"
							#li.page-item
								=link_to 'All posts', posts_path, :class => "page-link"
							-if @post.next
								#li.page-item
									=link_to "#{@post.next.title} >>", @post.next, :class => "page-link"

	.container
		.row
			.col-md-12
				- if user_signed_in?
					= link_to 'Edit', edit_post_path(@post)
					= link_to "Delete", post_path(@post), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }

