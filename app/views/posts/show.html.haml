/ Page Header
.container-fluid.top-50
	-if @post.hero_image_url.present?
		%header.masthead{:style => "background-image: url(#{@post.hero_image_url})"}
			.container
				.row
					.col-lg-8.col-md-10.mx-auto
						.post-heading
							%h1= @post.title
							%span.meta=@meta
	- else
		%header.empty
			.container
				.row
					.col-lg-8.col-md-10.mx-auto
						.post-heading
							%h1= @post.title
							%span.meta=@meta

	%article
		.container
			.row
				.col-lg-8.col-md-10.mx-auto
					= sanitize @post.content
				.col-lg-12
					- @photos.each do |photo|
						=image_tag photo.large

	-if @post.previous || @post.next
		.container.top-50
			.row.pagination
				.col-md-12
					#nav.pagination
						#ul.pagination
							-if @post.previous
								#li.page-item
									=link_to "Previous post: #{@post.previous.title}", @post.previous, :class => "page-link"
							-if @post.next
								#li.page-item
									=link_to "Next post: #{@post.next.title}", @post.next, :class => "page-link"

	.container
		.row
			.col-md-12
				= link_to 'Edit', edit_post_path(@post)
				= link_to 'Back', posts_path
			