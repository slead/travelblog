/ Page Header
.container-fluid.top-50
	-if @post.photos.count > 0
		%header.masthead{:style => "background-image: url(#{@post.photos[0].large})"}
			.container
				.row
					.col-lg-8.col-md-10.mx-auto
						.post-heading
							%h1= @post.title
							%span.meta=@meta
	- else
		%header.empty
			.container
				.row
					.col-lg-8.col-md-10.mx-auto
						.post-heading
							%h1= @post.title
							%span.meta=@meta

	%article
		.container
			.row
				.col-lg-8.col-md-10.mx-auto
					= sanitize @post.content
			- @post.photos.drop(1).each do |photo|
				.row
					.col-md-12
						%a.image-link{"data-lightbox" => "set", "data-title" => "#{photo.title}", :href => "#{photo.large}"}
							%img.image{:alt => "#{photo.title}", :src => "#{photo.large}", :class => "lightbox-frame mx-auto d-block"}


	-if @post.previous || @post.next
		.container.top-50
			.row.pagination
				.col-md-12
					#nav.pagination
						#ul.pagination
							-if @post.previous
								#li.page-item
									=link_to "Previous post: #{@post.previous.title}", @post.previous, :class => "page-link"
							-if @post.next
								#li.page-item
									=link_to "Next post: #{@post.next.title}", @post.next, :class => "page-link"

	.container
		.row
			.col-md-12
				- if user_signed_in?
					= link_to 'Edit', edit_post_path(@post)
					= link_to "Delete", post_path(@post), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }
				= link_to 'All posts', posts_path
			