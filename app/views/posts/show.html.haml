/ Page Header
= content_tag 'div', '', class: 'container-fluid top-50', id: 'post_id', data: {id: @post.id, latitude: @post.latitude, longitude: @post.longitude}
-if @post.photos.count > 0
	%header.masthead.d-none.d-md-block{:style => "background-image: url(#{@post.photos.order(:sort)[0].large})"}
		.container
			.row
				.col-lg-8.col-md-10.mx-auto
					.post-heading
						%h1= @post.title
						%span.meta=@meta
						- if @post.status == 'draft'
							%span.meta.draft= "(draft)"
- else
	%header.empty
		.container
			.row
				.col-lg-8.col-md-10.mx-auto
					.post-heading
						%h1= @post.title
						%span.meta=@meta
						- if @post.status == 'draft'
							%span.meta.draft= "(draft)"

%article
	.container
		- if user_signed_in?
			.row
				= link_to 'Edit', edit_post_path(@post)
		.row
			-if @post.content.length > 0
				-if @post.latitude.present?
					#content.col-md-8
						= sanitize @post.content
					#minimapdiv.col-md-4.d-none.d-md-block
						#map.minimap.col-md-12
						%span#fullscreen= link_to "view full screen", map_path(:post => @post.id)
				- else
					.col-md-8.mx-auto
						= sanitize @post.content
		- if @post.photos.count > 0
			.row.top-50.lightboxpics
			- @post.photos.order(:sort)[1..@post.photos.length].each do |photo|
				.row
					.col-md-12
						-if user_signed_in?
							= link_to photo_path(photo), method: :delete, class: "pull-right", data: {confirm: "Are you sure you want to delete this photo?"} do
								%i.fa.fa-times
						%figure
							%a.image-link{"data-lightbox" => "#{@post.title}", "data-title" => "#{photo.title}", :href => "#{photo.large}"}
								%img.image{:alt => "#{photo.title}", :src => "#{photo.large}", :class => "lightbox-thumb mx-auto d-block"}
							-if not photo.title.include? "jpg"
								%figcaption= "#{photo.title}"


-if @post.previous || @post.next
	.container.top-50
		.row.pagination
			.col-md-12
				#nav.pagination
					#ul.pagination
						-if @post.previous
							#li.page-item
								=link_to "<< #{@post.previous.title}", @post.previous, :class => "page-link"
						#li.page-item
							=link_to 'All posts', posts_path, :class => "page-link"
						-if @post.next
							#li.page-item
								=link_to "#{@post.next.title} >>", @post.next, :class => "page-link"

.container
	.row
		.col-md-12
			- if user_signed_in?
				= link_to 'Edit', edit_post_path(@post)
				= link_to "Delete", post_path(@post), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }

